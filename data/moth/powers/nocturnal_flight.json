{
   "name":"Nocturnal Flight",
   "description":"Enhanced flight abilities during nighttime. [Secondary]",
   "type":"origins:multiple",
   "elytra":{
      "type":"origins:elytra_flight",
      "render_elytra":true,
      "texture_location":"minecraft:textures/entity/elytra.png"
   },
   "prevent_elytra":{
      "type":"origins:prevent_elytra_flight",
      "entity_action":{
         "type":"origins:execute_command",
         "command":"tellraw @s {\"text\": \"You cannot glide during the day!\", \"color\": \"red\"}"
      },
      "condition":{
         "type":"origins:daytime",
         "inverted":false
      }
   },
   "active":{
      "type":"origins:active_self",
      "entity_action":{
         "type":"origins:if_else",
         "condition":{
            "type":"origins:daytime",
            "inverted":true
         },
         "if_action":{
            "type":"origins:and",
            "actions":[
               {
                  "type":"origins:add_velocity",
                  "x":0.0,
                  "y":0.0,
                  "z":2.0,
                  "space":"local",
                  "client":true,
                  "server":true,
                  "set":false
               },
               {
                  "type":"origins:spawn_particles",
                  "particle":"minecraft:poof",
                  "count":20,
                  "speed":0.2,
                  "force":true,
                  "spread":{
                     "x":0.5,
                     "y":0.0,
                     "z":0.5
                  },
                  "offset_y":-0.5
               }
            ]
         },
         "else_action":{
            "type":"origins:execute_command",
            "command":"tellraw @s {\"text\": \"You cannot fly during the day!\", \"color\": \"red\"}"
         }
      },
      "cooldown":80,
      "hud_render":{
         "should_render":true,
         "sprite_location":"origins:textures/gui/resource_bar.png",
         "bar_index":4
      },
      "key":{
         "key":"key.origins.secondary_active",
         "continuous": true
      }
   }
}